@model App.Models.PollModel

@{
    ViewBag.Title = "Nieuwe poll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Nieuwe poll</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Question)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Question)
            @Html.ValidationMessageFor(model => model.Question)
        </div>

        <div class="editor-label" style="float:left; margin-right:10px;">
            @Html.LabelFor(model => model.Public)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Public)
            @Html.ValidationMessageFor(model => model.Public)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Answers)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Answers, new { @class="answers" })
            <br />  @Html.ValidationMessageFor(model => model.Answers)
            <br /> @Html.ValidationMessage("AntwoordValidatie")
            <br />Voer een nieuwe regel in per antwoord.
        </div>

        <p>
            <input type="submit" value="Poll maken" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
