@model PagedList.IPagedList<Business.Entities.PollQuestion>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Nieuwste polls";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<table id="poll">
    @foreach (var poll in Model)
    {
        <tr class="poll"><td class="poll">@Html.ActionLink(poll.Question, "showPoll", "Poll", new { guid = poll.GUID }, null)</td><td>@poll.PollVotes.Count stemmen</td> </tr>
    }
</table>
<br /><br />
@if (Model.Count != 0)
{
 <text>Pagina</text> @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) <text>van</text> @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("NewestPolls",new { page}))
}
else {
<text>Er werden nog geen polls aangemaakt.</text>
}